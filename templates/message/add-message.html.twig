{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4"><span class="tx-green">Create New</span> Message</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.homepage, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.text, {'attr': {'class': 'form-control', 'rows': 5}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.image_path, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3 captcha">
            {{ form_row(form.captcha, {'attr': {'class': 'form-control'}}) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mb-3 custom-checkbox">
                {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}


        <button class="btn add-new-button">Create</button>
        {{ form_end(form) }}

        <div class="mt-3 mb-5">
            <a href="{{ path('message_list') }}" class="btn btn-secondary button-radius">Back to message list</a>
        </div>
    </div>
{% endblock %}