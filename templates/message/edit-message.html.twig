{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4"><span class="tx-green">Edit</span> Message</h1>
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.homepage, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.text, {'attr': {'class': 'form-control', 'rows': 5}}) }}
        </div>
        <div class="mb-3 custom-checkbox">
            {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button class="btn add-new-button">Update</button>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('message_list') }}" class="btn btn-secondary">Back to message list</a>
        </div>
    </div>
{% endblock %}
